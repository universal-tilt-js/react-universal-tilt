{
  "name": "react-universal-tilt",
  "version": "1.4.0",
  "description": "universal-tilt.js implementation for React component",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-universal-tilt.cjs.js",
  "module": "lib/react-universal-tilt.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "lint": "eslint 'src/**/*.tsx' --fix",
    "prettier": "prettier --write 'src/**/*.tsx'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-universal-tilt.git"
  },
  "keywords": [
    "React",
    "component",
    "tilt",
    "parallax",
    "movement",
    "gyroscope"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-universal-tilt/issues"
  },
  "homepage": "https://github.com/JB1905/react-universal-tilt#readme",
  "dependencies": {
    "universal-tilt.js": "^2.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@storybook/storybook-deployer": "^2.8.1",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.17",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript2": "^0.25.3",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
