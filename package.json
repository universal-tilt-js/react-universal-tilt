{
  "name": "react-universal-tilt",
  "version": "1.4.0",
  "description": "universal-tilt.js implementation for React component",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-universal-tilt.cjs.js",
  "module": "lib/react-universal-tilt.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.tsx' --fix",
    "prettier": "prettier --write 'src/**/*.tsx'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/universal-tilt-js/react-universal-tilt.git"
  },
  "keywords": [
    "react",
    "component",
    "tilt",
    "parallax",
    "movement",
    "gyroscope"
  ],
  "bugs": {
    "url": "https://github.com/universal-tilt-js/react-universal-tilt/issues"
  },
  "homepage": "https://github.com/universal-tilt-js/react-universal-tilt#readme",
  "dependencies": {
    "universal-tilt.js": "^2.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-controls": "^6.0.21",
    "@storybook/addon-docs": "^6.0.21",
    "@storybook/addons": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@storybook/storybook-deployer": "^2.8.6",
    "@testing-library/react": "^11.0.2",
    "@types/jest": "^26.0.13",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.49",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-loader": "^8.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
